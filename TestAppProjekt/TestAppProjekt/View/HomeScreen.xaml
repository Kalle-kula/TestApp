<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppProjekt.View.HomeScreen">

  <ContentPage.Content>

    <StackLayout Padding="5">

      <ListView x:Name ="NewsListView" ItemsSource="{Binding News}" ItemTapped="NewsListView_OnItemTapped">
        <ListView.ItemTemplate>
          <DataTemplate >
            <ViewCell >
              <ViewCell.View >
                <StackLayout>
                  <StackLayout Orientation="Horizontal">
                    <Image Source="{Binding NewsImgUrl}"/>
                    <StackLayout Orientation="Vertical">
                    <Label Text="{Binding Subject}" FontSize="20"  />
                    <Label Text="{Binding ShortNewsText}" FontSize="10" />
                    </StackLayout>
                  </StackLayout>
                </StackLayout>
              </ViewCell.View>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>

    </StackLayout>

  </ContentPage.Content>

</ContentPage>