<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppProjekt.Meny_2.Employees">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>

        <StackLayout Padding="30">
          <Label Text="Firstname:"/>
          <Label Text="{Binding FullName}" FontSize="20" FontAttributes ="Bold"/>
          <Label Text="Age:"/>
          <Label Text="{Binding Age}" FontSize="15" FontAttributes ="Bold "/>
          <Label Text="Phone No:"/>
          <Label Text="{Binding Phone}" FontAttributes ="Bold"/>
          <Label Text="Email:"/>
          <Label Text="{Binding Email}" FontAttributes ="Bold, Italic"/>
        </StackLayout>

      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>